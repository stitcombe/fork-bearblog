# ==============================================
# Bear Blog Docker Configuration
# ==============================================
# Copy this file to .env and fill in your values

# ----------------------------------------------
# REQUIRED: Security
# ----------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET=your-very-long-random-secret-key-here
SALT=your-random-salt-for-hashing

# PostgreSQL password
POSTGRES_PASSWORD=your-secure-postgres-password

# ----------------------------------------------
# REQUIRED: Domain Configuration
# ----------------------------------------------
# Comma-separated list of domains that serve the main site
# For local development: localhost,localhost:8000
# For production with subdomains: yourdomain.com,www.yourdomain.com
MAIN_SITE_HOSTS=localhost,localhost:8000

# CSRF Trusted Origins (must include protocol)
# Comma-separated list matching your domains
# For local: http://localhost,http://localhost:8000
# For production: https://yourdomain.com,https://*.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost,http://localhost:8000

# ----------------------------------------------
# OPTIONAL: Admin User (created on first run)
# ----------------------------------------------
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=changeme123

# ----------------------------------------------
# EMAIL CONFIGURATION
# ----------------------------------------------
# Leave EMAIL_HOST empty to disable email features

# Gmail example:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password  # Use App Password, not regular password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=Your Blog <your-email@gmail.com>

# SendGrid example:
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=Your Blog <noreply@yourdomain.com>

# Mailgun example:
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_HOST_USER=postmaster@your-domain.mailgun.org
# EMAIL_HOST_PASSWORD=your-mailgun-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=Your Blog <noreply@yourdomain.com>

# Amazon SES example:
# EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-ses-smtp-user
# EMAIL_HOST_PASSWORD=your-ses-smtp-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=Your Blog <noreply@yourdomain.com>

# Default (no email):
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=Bear Blog <noreply@example.com>

# ----------------------------------------------
# MEDIA STORAGE
# ----------------------------------------------
# Use 'local' for Docker volume storage (recommended for self-hosted)
# Use 's3' for DigitalOcean Spaces, AWS S3, or MinIO
MEDIA_STORAGE=local
MEDIA_URL=/media/

# S3 Configuration (only if MEDIA_STORAGE=s3)
# SPACES_ACCESS_KEY_ID=your-access-key
# SPACES_SECRET=your-secret-key
# SPACES_BUCKET=your-bucket-name
# SPACES_ENDPOINT=https://sfo2.digitaloceanspaces.com

# ----------------------------------------------
# OPTIONAL INTEGRATIONS
# ----------------------------------------------

# Sentry Error Tracking (leave empty to disable)
SENTRY_DSN=

# Cloudflare Cache Invalidation (leave empty to disable)
CLOUDFLARE_API_KEY=
CLOUDFLARE_EMAIL=
CLOUDFLARE_ZONE_ID=

# Akismet Spam Protection (leave empty to disable)
AKISMET_KEY=

# ----------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------
DEBUG=False
ENVIRONMENT=production

# ----------------------------------------------
# CADDY HTTPS (if using Caddy reverse proxy)
# ----------------------------------------------
# Uncomment the caddy service in docker-compose.yml first
# SITE_DOMAIN=yourdomain.com
# ACME_EMAIL=admin@yourdomain.com
